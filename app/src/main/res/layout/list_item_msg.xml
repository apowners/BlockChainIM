<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        tools:text="杨"
        tools:background="@drawable/bg_circle"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/unread"
        style="@style/wrap"
        android:singleLine="true"
        android:textColor="@color/white"
        android:maxEms="2"
        android:minWidth="@dimen/dp_15"
        android:minHeight="@dimen/dp_15"
        tools:text="9"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_2"
        android:background="@drawable/bg_red_circle"
        android:layout_alignEnd="@id/item_head"
        android:layout_alignRight="@id/item_head"
        android:layout_marginTop="@dimen/dp_5"/>
    <LinearLayout
        style="@style/match.wrap.hor_linear"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_toRightOf="@id/item_head"
        android:layout_toEndOf="@id/item_head">
        <TextView
            android:id="@+id/item_nick"
            tools:text="@string/success_hint"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/bg_11"
            style="@style/wrap"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_time"
            style="@style/wrap"
            tools:text="13:12"
            android:textColor="@color/bg_98"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_msg"
        style="@style/wrap"
        android:textColor="@color/bg_55"
        android:textSize="@dimen/sp_13"
        android:singleLine="true"
        android:ellipsize="middle"
        tools:text="@string/contact_remark"
        android:layout_toRightOf="@id/item_head"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_alignBottom="@id/item_head"
        android:layout_marginTop="@dimen/dp_5"/>
    <View style="@style/create_line"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_below="@id/item_head"/>
</RelativeLayout>