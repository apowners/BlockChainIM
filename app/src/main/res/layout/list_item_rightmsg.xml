<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_EE">

    <TextView
        android:id="@+id/item_time"
        style="@style/wrap"
        tools:text="pm 13:13"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/bg_98"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"/>
    <LinearLayout
        style="@style/match.wrap.hor_linear"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/item_msg"
            style="@style/match.wrap"
            android:textColor="@color/bg_11"
            tools:text="12dfjdfsdsd\n\ndsdfsd"
            android:background="@drawable/bg_white_circle_shape"
            android:textSize="@dimen/sp_15"
            android:padding="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_nick"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            tools:text="右"
            tools:background="@drawable/bg_circle"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>